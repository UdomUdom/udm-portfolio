---
import Section from "./Section.astro";
import { Icon } from "astro-icon/components";
---

<Section
  class="w-full container mx-auto flex flex-col items-center justify-center text-center px-4 py-8 md:py-16"
>
  <div class="flex flex-col items-center">
    <h2
      class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"
    >
      Technologies
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 p-4">
      <div>
        <h2 class="text-2xl opacity-80 mb-6 text-center">Languages</h2>
        <nav class="flex flex-wrap justify-center gap-4"></nav>
        <h2 class="text-2xl opacity-80 mt-8 mb-6 text-center">Frameworks</h2>
        <nav class="flex flex-wrap justify-center gap-4"></nav>
      </div>

      <div>
        <h2 class="text-2xl opacity-80 mb-6 text-center">Database</h2>
        <nav class="flex flex-wrap justify-center gap-4"></nav>
        <h2 class="text-2xl opacity-80 mt-8 mb-6 text-center">
          Additional Tools
        </h2>
        <nav class="flex flex-wrap justify-center gap-4"></nav>
      </div>
    </div>
  </div>
</Section>
