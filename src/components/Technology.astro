---
import { Icon } from "astro-icon/components";
---

<div
  class="w-full container mx-auto flex items-center justify-center text-cen ter px-4 h-dvh min-h-screen"
>
  <section id="technologies">
    <div class="flex flex-col items-center">
      <h1
        class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4"
      >
        Technologies
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 w-full">
        {
          [
            {
              title: "Languages",
              icons: ["typescript", "javascript", "html", "css", "python"],
            },
            {
              title: "Frameworks & Libraries",
              icons: ["react", "tailwind", "nextjs", "nodejs", "expressjs"],
            },
            {
              title: "Database",
              icons: ["mongodb", "postgresql", "mysql"],
            },
            {
              title: "Additional Tools",
              icons: ["docker", "git", "notion", "vercel"],
            },
          ].map(({ title, icons }) => (
            <div class="flex flex-col items-center">
              <h3 class="text-2xl opacity-80 mb-6">{title}</h3>
              <nav class="flex flex-wrap justify-center gap-6 text-4xl text-gray-700 dark:text-gray-300">
                {icons.map((icon) => (
                  <Icon name={icon} />
                ))}
              </nav>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</div>
